<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mycompany.googleimagesearch.activities.ImageDisplayActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivFullImage"
        android:src="@drawable/ic_action_search"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:background="#ff000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/share_label"
        android:id="@+id/btShare"
        android:layout_alignTop="@+id/ivFullImage"
        android:layout_alignRight="@+id/ivFullImage"
        android:drawableLeft="@mipmap/ic_share_teal"
        android:padding="10dp"
        android:onClick="onShareImage" />
</RelativeLayout>
